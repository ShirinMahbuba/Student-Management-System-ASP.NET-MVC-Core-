@model IEnumerable<webapp04.Models.Student>

@{
    ViewData["Title"] = "Index";
    
}

<h1 class= " alert alert-primary">List Of Students</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentRoll)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoPath)
            </th>
            <th>Action</th>
            <th>Upload</th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
               
            <td>
                @Html.DisplayFor(modelItem => item.StudentRoll)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
              @* @Html.DisplayFor(modelItem => item.PhotoPath)*@
                

                    @if (item.PhotoPath != null)
                    {
                        <img src="~/StudentPhoto/@item.PhotoPath" style="width:90px;" />
                    }

                

            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-success">Delete</a>
            </td>
                <td>
                
                   
                
                    <a asp-action="Upload" asp-route-id="@item.Id" class="btn btn-outline-warning">Upload Photo</a>
                </td>
        </tr>
}
    </tbody>
</table>
